{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "settings": {
        "ecmascript": 6,
        "jsx": true
    },
    "plugins": [
        "react"
    ],
		"globals": {
		    "angular": true,
		},
    "rules": {
        "strict": 1,
        "quotes": [2, "single"],
				"brace-style": [2, "ltbs"],
				"semi": [2, "always"],
				"space-in-brackets": [2, "never"],
				"space-infix-ops": 2,
        "no-unused-vars": 0,
        "camelcase": 2,
				"curly": 2,
        "no-underscore-dangle": 0
    }
}
